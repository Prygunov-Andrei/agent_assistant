{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "types": ["vite/client", "jest", "@testing-library/jest-dom"],
    "noEmit": true,
    "verbatimModuleSyntax": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
        "module": "es2020",
    "target": "es2020",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "src/setupTests.ts"
  ]
}
