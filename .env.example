# Переменные окружения для Agent Assistant

# ===== Django =====
SECRET_KEY=your_django_secret_key_here_generate_new_for_production
DEBUG=True
# ВАЖНО: для продакшена используйте имя сервиса 'backend' из docker-compose.yml
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,backend

# ===== База данных =====
DB_NAME=agent_assistant_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
# ВАЖНО: в Docker используйте 'db' (имя сервиса), локально - 'localhost'
DB_HOST=db
DB_PORT=5432

# ===== Redis =====
# ВАЖНО: в Docker используйте 'redis' (имя сервиса), локально - 'localhost'
REDIS_URL=redis://redis:6379/1

# ===== OpenAI =====
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=4000

# ===== SORA (опционально) =====
SORA_API_KEY=sk-your-sora-api-key-here
SORA_MODEL=sora-1.0
SORA_VIDEO_QUALITY=720p

# ===== Telegram Bot =====
BOT_TOKEN=your_telegram_bot_token_here
# ВАЖНО: используйте имя сервиса 'backend', НЕ 'localhost' и НЕ имя контейнера!
API_BASE_URL=http://backend:8000/api
WEBHOOK_URL=

# ===== Frontend =====
# Для локальной разработки: http://localhost:8000/api
# Для продакшена: укажите IP или домен вашего сервера с /api
VITE_API_URL=http://localhost:8000/api
